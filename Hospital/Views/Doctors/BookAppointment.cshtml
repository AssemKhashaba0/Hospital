<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4 d-flex">
            <div class="card mx-auto my-3 shadow-lg" style="width: 18rem;">
                <img src="~/images/@item.Img" class="card-img-top img-fluid" alt="Card image">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title text-center">@item.Name</h5>
                    <p class="card-text text-muted">@item.Specialization</p>
                    <a href="/Doctors/CompleteAppointment/@item.Id" class="btn btn-primary mt-auto">Book Appointment</a>
                </div>
            </div>
        </div>
    }
</div>
